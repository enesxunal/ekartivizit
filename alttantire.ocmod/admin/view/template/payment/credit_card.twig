{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="float-end">
        <button type="submit" form="form-payment" data-bs-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa-solid fa-save"></i></button>
        <a href="{{ back }}" data-bs-toggle="tooltip" title="{{ button_back }}" class="btn btn-light"><i class="fa-solid fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ol class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
          <li class="breadcrumb-item"><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ol>
    </div>
  </div>
  <div class="container-fluid">
    <div class="card">
      <div class="card-header"><i class="fa-solid fa-pencil"></i> {{ text_edit }}</div>
      <div class="card-body">
        {% if  errors %}
          {% for key, val in errors %}
            <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ val }}</div>
          {% endfor %}
        {% endif %}
        {% if success %}
          {% for key, val in success %}
            <div class="alert alert-success"><i class="fa fa-check"></i> {{ val }} </div>
          {% endfor %}
        {% endif %}
        <form id="form-payment" action="{{ save }}" method="post" data-oc-toggle="ajax">
          <div class="tab-content">
            <div id="tab-general" class="tab-pane active">
              <fieldset>
                <legend>{{ title_api_user_information }}</legend>
                <div class="row mb-3">
                  <label for="input-response" class="col-sm-2 col-form-label">{{ label_environment }}</label>
                  <div class="col-sm-10">
                    <input type="text" name="payment_credit_card_environment" value="{{ payment_credit_card_environment }}" class="form-control" />
                    {% if errors.payment_credit_card_environment or not payment_credit_card_environment or payment_credit_card_environment == null %}
                      <span class="text-danger">{{ errors_message.payment_credit_card_environment }}</span>
                    {% endif %}
                  </div>
                </div>
                <div class="row mb-3">
                  <label for="input-response" class="col-sm-2 col-form-label">{{ label_client_id }}</label>
                  <div class="col-sm-10">
                    <input type="text" name="payment_credit_card_client_id" value="{{ payment_credit_card_client_id }}" class="form-control" />
                    {% if errors.payment_credit_card_client_id or not payment_credit_card_client_id or payment_credit_card_client_id == null %}
                      <span class="text-danger">{{ errors_message.payment_credit_card_client_id }}</span>
                    {% endif %}
                  </div>
                </div>
                <div class="row mb-3">
                  <label for="input-response" class="col-sm-2 col-form-label">{{ label_api_user }}</label>
                  <div class="col-sm-10">
                    <input type="text" name="payment_credit_card_api_user" value="{{ payment_credit_card_api_user }}" class="form-control" />
                    {% if errors.payment_credit_card_api_user or not payment_credit_card_api_user or payment_credit_card_api_user == null %}
                      <span class="text-danger">{{ errors_message.payment_credit_card_api_user }}</span>
                    {% endif %}
                  </div>
                </div>
                <div class="row mb-3">
                  <label for="input-response" class="col-sm-2 col-form-label">{{ label_api_pass }}</label>
                  <div class="col-sm-10">
                    <input type="text" name="payment_credit_card_api_pass" value="{{ payment_credit_card_api_pass }}" class="form-control" />
                    {% if errors.payment_credit_card_api_pass or not payment_credit_card_api_pass or payment_credit_card_api_pass == null %}
                      <span class="text-danger">{{ errors_message.payment_credit_card_api_pass }}</span>
                    {% endif %}
                  </div>
                </div>
              </fieldset>
              <fieldset>
                <legend>{{ title_order_status }}</legend>
                <div class="row mb-3">
                  <label for="input-approved-status" class="col-sm-2 col-form-label">{{ label_order_completed }}</label>
                  <div class="col-sm-10">
                    <select name="payment_credit_card_order_completed_id" id="payment_credit_card_order_completed_id" class="form-control">
                      <option value="" selected="selected">{{ text_select }}</option>

                      {% for order_status in order_statuses %}{% if order_status.order_status_id == payment_credit_card_order_completed_id %}
                        <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
                      {% else %}
                        <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                      {% endif %}{% endfor %}
                    </select>
                    {% if errors.payment_credit_card_order_completed_id or payment_credit_card_order_completed_id == '' %}
                      <br /><span class="text-danger">{{ errors_message.payment_credit_card_order_completed_id }}</span>
                    {% endif %}
                  </div>
                </div>
                <div class="row mb-3">
                  <label for="input-status" class="col-sm-2 col-form-label">{{ label_module_status }}</label>
                  <div class="col-sm-10">
                    <div class="form-check form-switch form-switch-lg">
                      <input type="hidden" name="payment_credit_card_status" value="0"/> <input type="checkbox" name="payment_credit_card_status" value="1" id="input-status" class="form-check-input"{% if payment_credit_card_status %} checked{% endif %}/>
                    </div>
                  </div>
                </div>
              </fieldset>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
{{ footer }}
